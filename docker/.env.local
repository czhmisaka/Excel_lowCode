# Excel_lowCode - 本地开发环境配置
# 此配置用于本地Docker环境，包含MySQL数据库

# 本地运行模式
LOCAL_RUN=true

# 应用配置
NODE_ENV=production
PORT=3000

# 本地数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=annual_leave
DB_USER=annual_user
DB_PASSWORD=annual_password

# MySQL根用户密码（用于数据库初始化）
MYSQL_ROOT_PASSWORD=root

# 文件上传配置
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=xlsx,xls

# 安全配置
JWT_SECRET=your_jwt_secret_here_local
BCRYPT_SALT_ROUNDS=12

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# 前端配置
FRONTEND_PORT=8080
API_BASE_URL=http://localhost:3000

# 镜像标签配置
IMAGE_PREFIX=annual-leave
FRONTEND_TAG=latest
BACKEND_TAG=latest

# 导出配置
EXPORT_DIR=./exports
COMPRESS_IMAGES=true
