# Excel_lowCode - SQLite本地运行环境配置
# 此配置用于SQLite本地Docker环境

# 运行模式
RUN_MODE=sqlite

# 应用配置
NODE_ENV=production
PORT=3000

# SQLite数据库配置
DB_TYPE=sqlite
SQLITE_DB_PATH=/app/data/annual_leave.db

# 文件上传配置
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=xlsx,xls

# 安全配置
JWT_SECRET=your_jwt_secret_here_sqlite
BCRYPT_SALT_ROUNDS=12

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# 前端配置
FRONTEND_PORT=8080
API_BASE_URL=http://localhost:3000

# 后端端口配置
BACKEND_PORT=3000

# 镜像标签配置
IMAGE_PREFIX=annual-leave
FRONTEND_TAG=latest
BACKEND_TAG=latest

# 导出配置
EXPORT_DIR=./exports
COMPRESS_IMAGES=true
