# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=excel_data
DB_USER=root
DB_PASSWORD=password

# SQLite配置（如果使用SQLite）
DB_TYPE=sqlite
SQLITE_DB_PATH=./data/annual_leave.db

# 应用配置
NODE_ENV=production
PORT=3000

# 前端配置
FRONTEND_PORT=8080

# MCP服务器配置
MCP_SERVER_PORT=3001
IMAGE_PREFIX=excel-data
MCP_SERVER_TAG=latest

# Redis缓存配置
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# 缓存配置
CACHE_ENABLED=false
CACHE_MAX_MEMORY=104857600  # 100MB
CACHE_TTL=300000  # 5分钟
REDIS_ENABLED=false
REDIS_URL=redis://redis:6379

# 缓存统计配置
CACHE_STATS_ENABLED=false
CACHE_STATS_INTERVAL=60000  # 1分钟
