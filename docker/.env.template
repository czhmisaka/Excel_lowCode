# 应用配置
NODE_ENV=production
PORT=3000

# 数据库配置（使用后端项目配置）
DB_HOST=118.196.16.32
DB_PORT=3306
DB_NAME=max
DB_USER=max
DB_PASSWORD=max

# 文件上传配置
